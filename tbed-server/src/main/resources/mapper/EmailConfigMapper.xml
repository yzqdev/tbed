<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hellohao.dao.EmailConfigMapper">

    <select id="getemail" resultType="cn.hellohao.entity.EmailConfig">
        select * from tbed.email_config where id = 1
    </select>

    <update id="updateemail" parameterType="cn.hellohao.entity.EmailConfig">
        UPDATE tbed.email_config
        <set>
            <if test="emails != null">
                emails = #{emails},
            </if>
            <if test="emailKey != null">
                email_key = #{emailKey},
            </if>
            <if test="emailUrl != null">
                email_url = #{emailUrl},
            </if>
            <if test="port != null">
                `port` = #{port},
            </if>
            <if test="emailName != null">
                `email_name` = #{emailName},
            </if>
            <if test="using != null">
                `using` = #{using},
            </if>
        </set>
        WHERE
            id = 1
    </update>



</mapper>