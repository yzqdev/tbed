<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hellohao.dao.GroupMapper">


<!--    <select id="grouplist" resultType="cn.hellohao.entity.Group">-->
